---
import Layout from "@layouts/Layout.astro"
import Container from "@components/ui/Container.astro"
import BackToPrevious from "@components/ui/BackToPrevious.astro"
import { metadata } from "@config/config"
---

<Layout title="404" description={metadata.description}>
  <Container>
    <div class="mt-16 grid place-items-center gap-3">
      <h4 class="animate text-2xl font-semibold">404: Page not found</h4>
      <span class="animate">
        <BackToPrevious href="/">Go to home page</BackToPrevious>
      </span>
    </div>
  </Container>
</Layout>
